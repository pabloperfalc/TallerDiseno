@model BlogApp.Models.User
@{
    Layout = "~/Views/User/LoginLayout.cshtml"; 
  }
<div class ="form-signin">
    @Html.DisplayFor(m=>m.Username)
    <div class="form-control">
        @using (Html.BeginForm("Login", "user", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post))
        {
            <h4>Signin</h4>
            <hr/>
           
                 @Html.LabelFor(m => m.Username, new { @class = "form-label" })
                 @Html.TextBoxFor(m => m.Username, new { @class = "form-control" })
                 @Html.ValidationMessageFor(m => m.Username, "", new { @class = "text-danger" })
            
            
                 @Html.LabelFor(m => m.Password, new { @class = "form-label" })
                 @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
                 @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
                 @Html.ValidationSummary(true, "", new { @class = "text-danger" })

             <hr />
                <input type="submit" value="Log in" class="btn btn-primary btn-lg btn-block" />
            <hr />
            
            <div class="row">
                      <p class="text-center">Don't have a BlogApp account?@Html.ActionLink("Register","Register", null,new { @class="btn btn-link btn-large" })</p>
            </div>
        }

    </div>
</div>