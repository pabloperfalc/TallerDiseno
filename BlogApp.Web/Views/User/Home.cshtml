@model List<BlogApp.Models.Article>

@{
    ViewBag.Title = "Home";
}

<div class="blog-header">
    <h1 class="blog-title">BlogApp!</h1>
    <p class="lead blog-description">Writing has never been easier</p>
</div>
<div class="row">
    <div class="col-lg-12 blog-main">
        @foreach (var article in Model)
        {
            <div class="blog-post">
                <h2 class="blog-post-title">@Html.ActionLink(article.Name,"ArticleView", "Article", new { id = article.Id }, null)</h2>
                <p class="blog-post-meta">@Html.DisplayFor(x => article.ModificationdDate) by @Html.ActionLink(article.Author.Name, "list", "article", new { userId = article.AuthorId }, null)
                </p>
                <p class="ellipsis">@Html.DisplayFor(x => article.Text)</p>
                <hr />
            </div>
        }
    </div>

</div>