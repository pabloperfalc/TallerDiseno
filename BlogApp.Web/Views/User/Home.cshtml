@model List<BlogApp.Models.Article>

@{
    ViewBag.Title = "Home";
}

<div class="blog-header">
    <h1 class="blog-title">BlogApp!</h1>
    <p class="lead blog-description">Some random text for description</p>
</div>
<div class="row">
    <div class="col-md-8 blog-main">
        @foreach (var article in Model)
        {
            <div class="blog-post">
                <h2 class="blog-post-title">@Html.DisplayFor(x => article.Name)</h2>
                <p class="blog-post-meta">@Html.DisplayFor(x => article.ModificationdDate) by @Html.ActionLink(article.Author.Name, "list", "article", new { userId = article.AuthorId }, null)
                </p>
                <p style="color:red">@Html.DisplayFor(x => article.Text)</p>
                <hr />
            </div>
        }
    </div>

</div>