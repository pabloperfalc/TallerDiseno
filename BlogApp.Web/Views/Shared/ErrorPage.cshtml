@{
    ViewBag.Title = "ErrorPage";
}


<div class="container">
    <div class="row">
        <div class="col-md-12">
            <div class="error-template">
                <h1>
                    Oops!
                </h1>
                <h2>
                    @ViewBag.ErrorTitle
                </h2>
                <div class="error-details">
                    @ViewBag.ErrorDescription
                </div>
                <div class="error-actions">
                    <a href="@Url.Action("Home","User")" class="btn btn-primary btn-lg">
                        <span class="glyphicon glyphicon-home"></span>
                        Take Me Home </a>
                </div>
            </div>
        </div>
    </div>
</div>