@model List<BlogApp.Models.Article>

@{
    ViewBag.Title = "List";
}

<div class="row">
    <div class="col-lg-12 blog-main">
        @foreach (var article in Model)
        {
            <div class="blog-post">
                <h2 class="blog-post-title">@Html.ActionLink(article.Name, "ArticleView", "Article", new { id = article.Id }, null)</h2>
                <p class="blog-post-meta">
                    @Html.DisplayFor(x => article.ModificationdDate) by @Html.ActionLink(article.Author.Name, "list", "article", new { Id = article.AuthorId }, null)
                </p>
                @if (article.AuthorId == ((BlogApp.Models.User)Session["Login"]).Id)
                {
                    <a href="@Url.Action("EditArticle", "Article", new { articleId = article.Id })"><span class="glyphicon glyphicon-pencil" aria-hidden="true"></span></a>
                }
                <p class="ellipsis">@Html.DisplayFor(x => article.Text)</p>
                <hr />
            </div>
        }
    </div>
</div>