@model BlogApp.Models.Article

@{
    ViewBag.Title = "Import";
}

<h2>Import</h2>

<div class="row">
    @using (Html.BeginForm("Import", "Article",  FormMethod.Post, new { enctype = "multipart/form-data" }))
    {
        
        <div class="form-group">
            <div class="form-group">
                @Html.Label("Select file");
                <input type ="file" name="file" accept=".xml" />
                <input type="submit" value="ImportArticle" class="btn btn-primary">
            </div>
           
                    
           
        </div>
        }
</div>

<div class=" row">
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
</div>