@model BlogApp.Models.Article

@{
    ViewBag.Title = "CreateArticle";
}

<h2>CreateArticle</h2>

<div class ="row">
       @using (Html.BeginForm("CreateArticle","Article", new { ReturnUrl = ViewBag.ReturnUrl, }, FormMethod.Post))
        {
     <div class="form-group">
            @Html.LabelFor(m => m.Name)
            @Html.TextBoxFor(m => m.Name, new { @class = "form-control" })
            @Html.ValidationMessageFor(m => m.Name, "", new { @class = "text-danger" })
    </div>

    <div class ="form-group">
        @Html.Label("Content")
        @Html.TextAreaFor(m=>m.Text,new { @class = "form-control", rows=5, columns=2})
        @Html.ValidationMessageFor(m => m.Text, "", new { @class = "text-danger" })
    </div>

    <div class="form-group">
         @Html.LabelFor(m => m.Type):
       <div class="btn-group" data-toggle="buttons">
          <label class="btn btn-primary active">
            <input type="radio" name="Visibility" id="1" autocomplete="off" checked> Public 
          </label>
          <label class="btn btn-primary">
            <input type="radio" name="Visibility" id="2" autocomplete="off"> Private
          </label>
       </div>
   </div>
    
   <div class="form-group">
      @Html.LabelFor(m=>m.Layout):
        <div class="btn-group" data-toggle="buttons">
          <label class="btn btn-primary active">
            <input type="radio" name="Layout" id="1" autocomplete="off" checked> None 
          </label>
          <label class="btn btn-primary">
            <input type="radio" name="Layout" id="2" autocomplete="off"> Top
          </label>
           <label class="btn btn-primary">
            <input type="radio" name="Layout" id="3" autocomplete="off"> Left
          </label>
           <label class="btn btn-primary">
            <input type="radio" name="Layout" id="4" autocomplete="off"> Bottom
          </label>
       </div>
   </div>
    <br />
    <div class="form-group">
        <input type="submit" name="Confirm" value="Confirm" class="btn btn-primary" /> 
        <div class="form-group">
            <p class="text-right"> <input type="submit" name="Import" value="Import article" class="btn btn-primary" ></p>
        </div>
    </div>
       }
</div>

<div class=" row">
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
</div>