@model int

@{
    ViewBag.Title = "ImportVideos";
}

<h2>Import videos</h2>

<div class="row">
    @using (Html.BeginForm("ImportVideos", "Video", FormMethod.Post, new { enctype = "multipart/form-data" }))
    {

        <div class="form-group">
            <div class="form-group">
                @Html.Label("Select file");
                <input type="file" name="file" accept=".wvm" />
                <hr />
                <input type="submit" value="ImportVideo" class="btn btn-primary">
            </div>
        </div>
        if (@Model != null && @Model > 0)
        {
            <div class="alert alert-danger" role="alert">
                <strong>Warning</strong> the video could not be imported.
            </div>
        }
        if (@Model != null && @Model == 0)
        {
            <div class="alert alert-success" role="alert">
                <strong>Success</strong> The importation was successful.
            </div>
        }
    }
</div>

<div class=" row">
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
</div>